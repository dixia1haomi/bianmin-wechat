/* ------------------------------ 分享弹窗 ------------------------------ */

.fenxiangTanChuang-mask {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
}

.fenxiangTanChuang-mask .fenxiangTanChuang {
  width: 700rpx;
  height: 500rpx;
  background-color: #fff;
  border-radius: 4rpx;
  margin-top: 200rpx;
}

.fenxiangTanChuang-mask .fenxiangTanChuang-title {
  text-align: center;
  font-size: 40rpx;
  font-weight: 700;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.fenxiangTanChuang-mask button {
  border-radius: 50rpx;
  background-color: tomato;
  color: #fff;
  width: 80%;
  margin-bottom: 20rpx;
}

.fenxiangTanChuang-mask button::after {
  border: none;
}