/* ------------------------------ 留言弹窗-------------------------------- */

.liuyan-huifu-tanchuang {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  z-index: 999;
}

.tanchuang-block {
  width: 700rpx;
  height: 660rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-top: 200rpx;
}

.tanchuang-block .tanchuang-block-title {
  text-align: center;
  font-size: 40rpx;
  font-weight: 700;
  padding: 20rpx 0 20rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
}

.tanchuang-block .tips {
  text-align: center;
  font-size: 26rpx;
  color: #808080;
  margin-top: 20rpx;
}

.tanchuang-block .tanchuang-textarea {
  margin: 40rpx 20rpx;
}

.input {
  background-color: aliceblue;
}

.cursor {
  text-align: center;
  font-size: 26rpx;
  color: #808080;
  margin-top: 20rpx;
}

/* .tanchuang-textarea textarea {
  background-color: aliceblue;
  height: 200rpx;
  position: relative;
} */

.tanchuang-textarea text {
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 26rpx;
  color: #808080;
}

.tanchuang-input-fool {
  margin-top: 40rpx;
}

.tanchuang-input-fool button {
  margin-bottom: 20rpx;
  width: 80%;
  border-radius: 50rpx;
  background-color: tomato;
  color: #fff;
}

.tanchuang-input-fool button::after {
  border: none;
}
