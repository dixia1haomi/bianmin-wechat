<!-- 描述 -->
<view class='miaoshu'>
  <view class='miaoshu-title'>商家描述</view>
</view>

<block wx:if="{{shangjiaRes.withshangjia_img.length > 0}}">
  <!-- 图文详情 -->
  <view class='tuwenxiangqing'>
    <block wx:for="{{shangjiaRes.withshangjia_img}}" wx:key="">
      <view class='text-view'>
        <text>{{item.text}}</text>
      </view>
      <!-- mode='widthFix' aspectFit 保持纵横比缩放图片，使图片的长边能完全显示出来。也就是说，可以完整地将图片显示出来。 -->
      <image class='tuwenxiangqing-img' src='{{item.url}}' mode='widthFix'></image>
    </block>
  </view>
</block>
<block wx:else>
  <view class='no-miaoshu'>暂无描述</view>
</block>