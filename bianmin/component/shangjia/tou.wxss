/* 头图 */

.toutu {
  height: 562.5rpx;
}

.toutu-img {
  /* 16:9 */
  width: 100%;
  height: 562.5rpx;
}

/* 名称，地址，电话 */

.name-dizhi-dianhua {
  padding: 20rpx 0 20rpx 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  display: flex;
  border-bottom: 1rpx solid #e5e5e5;
  height: 110rpx;
}

/* 名称，地址 */

.name-dizhi {
  width: 577rpx;
}

.name {
  font-size: 38rpx;
  font-weight: 700;
  /* padding-bottom: 20rpx; */
  height: 70rpx;
}

.liulangcishu {
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #808080;
}

.dizhi {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #007aff;
  font-size: 30rpx;
}

/* 电话 */

.dianhua {
  flex: 1;
  border-left: 1rpx solid #e5e5e5;
  color: tomato;
  display: flex;
  justify-content: center;
  align-items: center;
}
