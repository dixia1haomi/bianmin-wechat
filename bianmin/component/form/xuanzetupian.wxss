.base {
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #e5e5e5;
}

.title {
  margin-bottom: 10rpx;
}

/* 填充图片 */

.tupian {
  display: flex;
  flex-wrap: wrap;
}

/* 添加图片 */

.tianjiatupian {
  height: 196rpx;
  width: 196rpx;
  background-color: aliceblue;
  border: 1rpx dashed #808080;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 100rpx;
  color: #808080;
}

/* 显示图片 */

.img {
  height: 200rpx;
  width: 200rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

/* 图片删除提示 */

.img-tips {
  margin-top: 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: #808080;
}
