.xuanzeqi {
  padding: 30rpx 20rpx;
  display: flex;
  background-color: #fff;
  border-bottom: 1px solid #e5e5e5;
  font-size: 34rpx;
}

/* 多行 */

.text {
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 3;
   white-space: normal; 
  /* white-space: nowrap; */
  /* white-space: pre; */
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

/* 单行 */

.xuanzeqi-title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* --------------------------------- 带箭头的单行列表--------------------------------- */

.danhang-list {
  background-color: #fff;
  /* border-top: 1px solid #e5e5e5; */
  border-bottom: 1px solid #e5e5e5;
  font-size: 34rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

/* 右箭头 */

.youjiantou7 {
  width: 7px;
  height: 7px;
  border-top: 3rpx solid #8a8a8a;
  border-right: 3rpx solid #8a8a8a;
  transform: rotate(45deg);
}
