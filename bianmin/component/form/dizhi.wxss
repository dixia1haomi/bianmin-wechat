/* 地址 */

.dizhi {
  margin-bottom: 10rpx;
  padding: 0 30rpx;
}


.dizhi-text {
  margin: 30rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* --------------------------------- 带箭头的单行列表--------------------------------- */

.danhang-list {
  /* padding: 30rpx; */
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  font-size: 34rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

/* 右箭头 */

.youjiantou7 {
  width: 7px;
  height: 7px;
  border-top: 3rpx solid #8a8a8a;
  border-right: 3rpx solid #8a8a8a;
  transform: rotate(45deg);
  /* margin-right: 30rpx; */
}
