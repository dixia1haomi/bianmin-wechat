/* 标题 */

.title {
  padding-bottom: 20rpx;
}

/* textarea输入框 */

.textarea-view {
  position: relative;
  padding: 20rpx;
  background-color: #fff;
}

.textarea {
  background-color: aliceblue;
  height: 500rpx;
  width: 100%;
  font-size: 36rpx;
}

.cursor {
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 26rpx;
  color: #808080;
}

/* 底部说明 */

.bottom {
  font-size: 26rpx;
  color: #808080;
  margin-top: 10rpx;
}

/* 按钮 */

.button {
   padding-top: 20rpx; 
}

.button button {
  margin-bottom: 20rpx;
  width: 80%;
  border-radius: 50rpx;
  background-color: tomato;
  color: #fff;
}

.button button::after {
  border: none;
}

/* --------------------------------- 带箭头的单行列表--------------------------------- */

.danhang-list {
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  font-size: 34rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
