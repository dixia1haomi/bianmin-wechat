

/* 电话 */

.dianhua {
  margin-bottom: 10rpx;
  padding: 30rpx;
}

.button-phone {
  position: absolute;
  right: 0;
  height: 100%;
  border-radius: 0;
  padding-top: 0;
  padding-bottom: 0;
  padding-left: 50rpx;
  padding-right: 50rpx;
  display: flex;
  align-items: center;
  border-left: 1rpx solid #e5e5e5;
}

.button-phone::after {
  border: none;
}



/* --------------------------------- 带箭头的单行列表--------------------------------- */

.danhang-list {
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  font-size: 34rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

