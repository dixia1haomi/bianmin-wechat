/**app.wxss**/

page {
  height: 100%;
  background-color: #efefef;
  font-size: 32rpx;
  letter-spacing: 1rpx;
  color: #3e3e3e;
}



/* ----------------------------------------------------------- */

/* 带箭头的单行列表 */

.danhang-list {
  /* padding: 30rpx; */
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  font-size: 34rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

/* 右箭头 */

.youjiantou7 {
  width: 7px;
  height: 7px;
  border-top: 3rpx solid #8a8a8a;
  border-right: 3rpx solid #8a8a8a;
  transform: rotate(45deg);
  margin-right: 30rpx;
}

/* view点击态 */

.hover {
  color: #8a8a8a;
}
