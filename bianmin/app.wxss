/**app.wxss**/

page {
  height: 100%;
  background-color: #efefef;
  font-size: 32rpx;
  letter-spacing: 1rpx;
  color: #3e3e3e;
}

/* ------------------------------ 分享弹窗 ------------------------------ */

.fenxiangTanChuang-mask {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
}

.fenxiangTanChuang-mask .fenxiangTanChuang {
  width: 700rpx;
  height: 500rpx;
  background-color: #fff;
  border-radius: 4rpx;
  margin-top: 200rpx;
}

.fenxiangTanChuang-mask .fenxiangTanChuang-title {
  text-align: center;
  font-size: 40rpx;
  font-weight: 700;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.fenxiangTanChuang-mask button {
  border-radius: 50rpx;
  background-color: tomato;
  color: #fff;
  width: 80%;
  margin-bottom: 20rpx;
}

.fenxiangTanChuang-mask button::after {
  border: none;
}



/* ----------------------------------------------------------- */

/* 带箭头的单行列表 */

.danhang-list {
  /* padding: 30rpx; */
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  font-size: 34rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

/* 右箭头 */

.youjiantou7 {
  width: 7px;
  height: 7px;
  border-top: 3rpx solid #8a8a8a;
  border-right: 3rpx solid #8a8a8a;
  transform: rotate(45deg);
  margin-right: 30rpx;
}

/* view点击态 */

.hover {
  color: #8a8a8a;
}

