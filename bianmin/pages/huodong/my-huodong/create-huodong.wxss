.huodong-base {
  padding-bottom: 260rpx;
}

.title {
  text-align: center;
  padding: 100rpx 0 60rpx 0;
  font-size: 36rpx;
  font-weight: 700;
  background-color: #fff;
}

/* 头图 */

.toutu {
  width: 100%;
  height: 562.5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
  background-color: #fff;
}

.toutu-tips {
  font-size: 26rpx;
  color: #808080;
  margin: 10rpx 20rpx 10rpx 20rpx;
}

.toutu-img {
  /* 4:3 */
  width: 100%;
  height: 562.5rpx;
}

.tianjia-toutu {
  color: #007aff;
}

/* 输入框 */

.textarea-view {
  position: relative;
  padding: 20rpx 30rpx;
  background-color: #fff;
  /* text-align: center; */
}

.textarea-view .textarea-title {
  padding-bottom: 20rpx;
}

.textarea-view .textarea {
  width: 100%;
  min-height: 150rpx;
  background-color: aliceblue;
}

.cursor {
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 26rpx;
  color: #808080;
}

/* 结束时间 */

.end-date {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}


/* 提交 */

.tijiao {
  position: fixed;
  bottom: 0;
  width: 100%;
  border-radius: 0;
  background-color: tomato;
  color: #fff;
  z-index: 999;
}

.tijiao::after {
  border: none;
}
