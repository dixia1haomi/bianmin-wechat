/* pages/fabu/fabu.wxss */

.page {
  padding-bottom: 200rpx;
}

.title {
  text-align: center;
  padding: 100rpx 0 60rpx 0;
  font-size: 36rpx;
  font-weight: 700;
  background-color: #fff;
}

.leimu {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 34rpx;
}

.leimu-text {
  margin: 30rpx;
}

.text {
  background-color: #fff;
  padding: 20rpx;
}

/* textarea输入框 */

.textarea-base {
  background-color: aliceblue;
  position: relative;
}

.textarea {
  width: 100%;
  height: 500rpx;
  font-size: 36rpx;
}

.cursor {
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 26rpx;
  color: #808080;
}

/* 切换模板按钮 */

.moban-button {
  margin-top: 20rpx;
  width: 80%;
  border-radius: 50rpx;
  background-color: skyblue;
  color: #fff;
}

.moban-button::after {
  border: none;
}

/* 填充图片 */

.tianchong-img {
  position: relative;
  padding-top: 20rpx;
  display: flex;
  align-items: center;
}

/* 添加图片 */

.tianjiatupian {
  height: 166rpx;
  width: 166rpx;
  background-color: aliceblue;
  border: 1rpx dashed #808080;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 100rpx;
  color: #808080;
}

/* 显示图片 */

.img {
  height: 170rpx;
  width: 170rpx;
  margin-right: 10rpx;
}

/* 图片删除提示 */

.img-tips {
  margin-top: 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: #808080;
}

.dizhi {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 34rpx;
  margin: 30rpx;
}

.dianhua {
  /* margin-top: 10rpx; */
  position: relative;
  margin: 30rpx;
}

.button-phone {
  position: absolute;
  right: 0;
  height: 100%;
  border-radius: 0;
  padding-top: 0;
  padding-bottom: 0;
  padding-left: 50rpx;
  padding-right: 50rpx;
  display: flex;
  align-items: center;
  border-left: 1rpx solid #e5e5e5;
}

.button-phone::after {
  border: none;
}

/* 提交 */

.tijiao {
  position: fixed;
  bottom: 0;
  width: 100%;
  border-radius: 0;
  background-color: tomato;
  color: #fff;
}

.tijiao::after {
  border: none;
}
