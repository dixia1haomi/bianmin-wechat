.neirong {
  background-color: #fff;
}

.title {
  padding: 60rpx 0 20rpx 20rpx;
  font-size: 36rpx;
  font-weight: 700;
}

.textarea {
  margin: 0 20rpx 0 20rpx;
}

.textarea-1 {
  width: 100%;
  background-color: aliceblue;
  height: 660rpx;
  font-size: 36rpx;
  position: relative;
}

.cursor {
  position: absolute;
  bottom: 0;
  right: 20rpx;
  font-size: 26rpx;
  color: #808080;
}

.tianchong-img {
  position: relative;
  padding: 0 20rpx 0 20rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
}

.img-block {
  flex: 1;
  display: flex;
  /* justify-content: space-between; *//* padding: 20rpx; */
}

.img {
  height: 130rpx;
  width: 130rpx;
  margin-right: 10rpx;
}

.tianchongmoban {
  /* position: absolute; *//* bottom: 20rpx; *//* right: 20rpx; */
  background-color: #2c2c2c;
  color: #fff;
  font-size: 24rpx;
  padding: 36rpx;
  border-radius: 50%;
  box-shadow: 4rpx 4rpx 10rpx #808080;
}

.tianjiatupian {
  height: 130rpx;
  width: 130rpx;
  background-color: aliceblue;
  border: 1rpx dashed #808080;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 100rpx;
  color: #808080;
}

.dizhi-dianhua {
}

.dizhi {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 34rpx;
}

.dianhua {
  padding-left: 20rpx;
  background-color: #fff;
  margin-top: 10rpx;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  font-size: 34rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.button-phone {
  /* width: 30%; */
  flex: 1;
  border-radius: 0%;
  margin: 0;
  /* float: right;  */
  border-left: 1rpx solid #e5e5e5;
  font-size: 34rpx;
}

.button-phone::after {
  display: none;
}

.tijiao {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: tomato;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0 30rpx 0;
}

.tijiao-item {
  color: #fff;
}

