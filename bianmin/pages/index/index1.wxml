<!-- 本地商家 -->
<view class='scroll'>
  <view class='tuijian'>本地商家</view>

  <scroll-view scroll-x class='scroll-view'>
    <block wx:for="{{shangjiaList}}" wx:key="">
      <view style='display: inline-block; padding-right: 20rpx;' id='{{item.id}}' catchtap='scroll'>
        <image class='wenzhang-img' src='{{item.toutu}}' mode='aspectFill'></image>
        <view class='scroll-title'>{{item.name}}</view>
      </view>
    </block>
    <view wx:if="{{shangjiaList.length == 10}}" class='scroll-gengduo' catchtap='go_shangjiaList_'>查看更多></view>
  </scroll-view>
</view>

<!-- 信息列表 -->
<block wx:for="{{Res}}" wx:key="" wx:for-index="resindex">
  <view class='base' data-index='{{resindex}}' catchtap="flodFn_">

    <!-- 头像 -->
    <view class='user'>
      <text class='leibie'>{{item.leibie}}</text>

      <view class='user-1' catchtap='asd_'>
        <image class='avatar' src='{{item.avatar_url}}'></image>
        <view class='name-time'>
          <view class='nick-name'>{{item.nick_name}}</view>
          <view class='time'>{{item.time}}</view>
        </view>
      </view>
    </view>

    <!-- 信息 -->
    <view class='xinxi'>

      <!-- 内容 -->
      <view class="{{item.hid ?'':'flod' }}">
        <!-- id用于获取内容实际高度 -->
        <text style='color: #2c2c2c;'>{{item.neirong}}</text>
      </view>

      <!-- 开展提示 -->
      <view class='xinxi-tishi'>
        <text wx:if="{{item.hid == false}}" class="iconfont icon-zhankai"></text>
        <text wx:else class="iconfont icon-zhankai .touming"></text>
      </view>

    </view>

    <block wx:if="{{item.hid == true}}">
      <!-- 配图 -->
      <view class='img-view'>
        <block wx:for="{{item.with_img}}" wx:for-item="img" wx:key="">
          <image class='img' src="{{img.url}}" catchtap='yulan_' data-img='{{item.with_img}}' data-index='{{index}}' lazy-load mode='aspectFill' />
        </block>
      </view>

      <!-- 地址 -->
      <view class='dizhi'>
        <text class='iconfont icon-dizhi' />
        <text catchtap='dizhi_' data-longitude='{{item.longitude}}' data-latitude='{{item.latitude}}' data-address='{{item.address}}'>地址：{{item.address}}</text>
      </view>

      <!-- 脚部按钮栏 -->
      <view class='info'>
        <view style='color: #808080;'>
          <text class='iconfont icon-yueduliang' />
          <text> {{item.liulangcishu}}</text>
        </view>

        <view id='{{item.phone}}' catchtap='call_phone_'>
          <text class='iconfont icon-phone' />
          <text> 拨打电话</text>
        </view>

        <!-- 留言弹窗事件携带信息ID -->
        <view catchtap='liuyan_' data-bianmin_id='{{item.id}}' data-index='{{resindex}}'>留言</view>
      </view>
    </block>

    <!-- 留言回复块 -->
    <block wx:if="{{item.with_liuyan.length > 0}}">
      <view class='liuyan-base'>
        <block wx:for="{{item.with_liuyan}}" wx:for-item="liuyan" wx:key="">

          <view class='liuyan'>

            <!-- 一级回复 -->
            <!-- data-index用来刷新 -->
            <!-- data-name用来显示弹窗title -->
            <!-- data-liuyan_id用来记录留言ID写入回复表 -->
            <!-- data-user_id记录留言人 -->
            <!-- data-xinxi_zhuren用来对比是不是信息主人 -->
            <view>
              <text style='color: #007aff;'>{{liuyan.nick_name}}</text>
              <text>：{{liuyan.neirong}}</text>
            </view>

            <!-- 二级回复 -->
            <view class='liuyan-huifu'>
              <block wx:for="{{liuyan.liuyanwith_huifu}}" wx:for-item="huifu" wx:key="">
                <view>
                  <text style='color: #007aff;'>{{huifu.user}}</text>
                  <text style='color: #808080;'> 回复 </text>
                  <text style='color: #007aff;'>{{huifu.hf_user}}</text>
                  <text>：{{huifu.neirong}}</text>
                </view>
              </block>
            </view>
          </view>
        </block>
      </view>
    </block>

  </view>
</block>

<!-- 留言弹窗 -->
<block wx:if="{{tanChuang}}">
  <view class="liuyan-huifu-tanchuang">
    <view class='tanchuang-input'>
      <view class='tanchuang-input-title'>留言</view>
      <view class='tanchuang-textarea'>
        <textarea placeholder='请输入内容..' bindinput='liuyan_input_' maxlength="50" focus>
          <text>{{input_cursor}}/50</text>
        </textarea>
      </view>
      <view class='tanchuang-input-fool'>
        <text catchtap='tanchuang_'>取消</text>
        <form report-submit bindsubmit='liuyan_queding_'>
          <button form-type="submit">确定</button>
        </form>
      </view>
    </view>
  </view>
</block>



