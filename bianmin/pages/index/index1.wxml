<block wx:for="{{Res}}" wx:key="">
  <view class='base'>

    <view class='user'>
      <image class='avatar' src='{{item.avatar_url}}'></image>
      <text class='leibie'>{{item.leibie}}</text>
      <text class='nick-name'>{{item.nick_name}} -- ID:{{item.id}}</text>
    </view>

    <view class='xinxi'>

      <view class="{{item.hid ?'extend':'flod' }}" data-index='{{index}}' catchtap="flodFn">
        <!-- 触发点击次数,只有展开会触发 -->
        <!-- <view class='tishi' wx:if="{{!item.hid}}" catchtap='liulangcishu'> ↓ </view> -->
        <text>{{item.neirong}}</text>
      </view>

      <view class='img-view'>
        <block wx:for="{{item.with_img}}" wx:for-item="img" wx:key="">
          <image class='img' src="{{img.url}}" catchtap='yulan' data-img='{{item.with_img}}' data-index='{{index}}' lazy-load mode='aspectFill' />
        </block>
      </view>

    </view>

    <view class='info'>
      <text>点击：{{item.liulangcishu}}</text>
      <text>{{item.update_time}}</text>
      <text>分享</text>
    </view>
  </view>
</block>



<!-- -----------分享按钮----------- -->
<view class='juzhong'>
  <view class='fenxiang' catchtap='go_wode'>
    <view class=''>+</view>
  </view>
</view>

<!-- -----------分享点击出现蒙层------------ -->
<view wx:if="{{mask}}" class='mask' catchtap='fenxiang'>
  <view class='mask-1' catchtap='fenxiang'>
    <view>分享</view>
    <view class='mask-2'>
      <view catchtap='shengcheng'>
        <view class="iconfont icon-xiazai" style='font-size:60rpx;text-align: center;'></view>
        <view>生成分享海报</view>
      </view>

      <button class='mybutton' open-type="share">
        <view class="iconfont icon-wechat" style='font-size:60rpx;text-align: center;'></view>
        <view>转发给好友</view>
      </button>

    </view>
  </view>
</view>