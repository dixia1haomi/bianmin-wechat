.title {
  padding: 160rpx 0 60rpx 30rpx;
  background-color: tomato;
  color: #fff;
  display: flex;
  align-items: center;
}

.title-img {
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.title-1 {
  padding-top: 10rpx;
  font-size: 38rpx;
  font-weight: 600;
}

.scroll {
  background-color: #fff;
  padding: 0 20rpx 0 20rpx;
}

.scroll-view {
  white-space: nowrap;
  width: 100%;
  height: 258rpx;
  position: relative;
}

.scroll-gengduo {
  position: absolute;
  top: 60rpx;
  color: #007aff;
  display: inline-block;
}

.tuijian {
  padding: 20rpx 0 20rpx 0;
  font-size: 34rpx;
  font-weight: 700;
}

.scroll-title {
  padding-bottom: 20rpx;
  width: 180rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.wenzhang-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 4rpx;
}

.swiper {
  height: 180rpx;
  width: 100%;
}

.flod {
  /* //折叠样式 */
  max-height: 130rpx;
  overflow-y: hidden;
}

.extend {

}

.tishi {
  position: absolute;
  top: 126rpx;
  width: 100%;
  text-align: center;
  padding: 10rpx 0 10rpx 0;
}

.img-view {
  width: 100%;
  margin-top: 60rpx;
  overflow: hidden;
}

.img {
  width: 160rpx;
  height: 160rpx;
  margin-left: 20rpx;
  border-radius: 4rpx;
}

.base {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  border-radius: 1px;
  margin: 20rpx 0 20rpx 0;
}

.user {
  display: flex;
  align-items: center;
  margin: 20rpx;
}

.avatar {
  height: 66rpx;
  width: 66rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}

.leibie {
  padding: 8rpx 20rpx 8rpx 20rpx;
  border: 4rpx solid tomato;
  font-weight: 600;
}

.name-time {
  margin-left: 20rpx;
}

.nick-name {
  font-size: 28rpx;
  color: #007aff;
}

.time {
  color: #808080;
  font-size: 24rpx;
}

.xinxi {
  flex: 1;
  position: relative;
}

.dizhi {
  margin: 0 20rpx 10rpx 20rpx;
  font-size: 28rpx;
  color: #007aff;
}

.info {
  color: #808080;
  padding: 20rpx 0 20rpx 0;
  margin: 0 20rpx 0 20rpx;
  border-top: 1rpx dashed #e5e5e5;
  font-size: 28rpx;
  display: flex;
  justify-content: space-around;
}

/* 没有更多 */

.nodata {
  padding: 40rpx;
  text-align: center;
  color: #808080;
}

/* 分享 */

.juzhong {
  display: flex;
  position: fixed;
  bottom: 80rpx;
  right: 40rpx;
}

.fenxiang {
  width: 120rpx;
  height: 120rpx;
  background-color: #2c2c2c;
  color: #fff;
  border-radius: 50%;
  font-size: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 10rpx #2c2c2c;
}

