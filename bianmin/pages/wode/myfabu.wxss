.title {
  text-align: center;
  padding: 100rpx 0 60rpx 0;
  font-size: 36rpx;
  font-weight: 700;
  background-color: #fff;
}

.base {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  border-radius: 1px;
  margin: 20rpx 0 20rpx 0;
}

.user {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.avatar {
  height: 66rpx;
  width: 66rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}

.leibie {
  color: #808080;
  padding: 8rpx 20rpx 8rpx 20rpx;
  border: 1rpx solid tomato;
}

.name-time {
  margin-left: 20rpx;
}

.nick-name {
  font-size: 28rpx;
  color: #007aff;
}

.time {
  color: #808080;
  font-size: 24rpx;
}

.xinxi {
  flex: 1;
  position: relative;
}

.img-view {
  width: 100%;
  margin-top: 60rpx;
  overflow: hidden;
}

.img {
  width: 160rpx;
  height: 160rpx;
  margin-left: 20rpx;
  border-radius: 4rpx;
}

.info {
  color: #007aff;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin-top: 10rpx;
  border-top: 1rpx dashed #e5e5e5;
  font-size: 30rpx;
  display: flex;
  justify-content: space-around;
}

.noxinxi {
  text-align: center;
  padding-top: 400rpx;
  color: #007aff;
}

/* 留言 */

.liuyan-base {
  padding: 20rpx;
  /* margin-top: 20rpx; */
  border-radius: 4rpx;
  font-size: 28rpx;
  background-color: #e5e5e5;
}

.liuyan-base-tishi {
  text-align: center;
  color: #808080;
  font-size: 26rpx;
}

.liuyan {
  font-size: 32rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.liuyan-huifu {
  margin-left: 30rpx;
}

/* 新留言提示 */

.xinliuyantishi {
  padding: 20rpx;
  background-color: tomato;
}

.xinliuyantishi-title {
  padding-bottom: 20rpx;
  text-align: center;
  color: #fff;
  font-weight: 700;
}
