.title {
  text-align: center;
  padding: 100rpx 0 60rpx 0;
  font-size: 36rpx;
  font-weight: 700;
  background-color: #fff;
}

.base {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  border-radius: 1px;
  margin: 20rpx 0 20rpx 0;
}


.user {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.avatar {
  height: 66rpx;
  width: 66rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}

.leibie {
  color: #808080;
  padding: 8rpx 20rpx 8rpx 20rpx;
  border: 1rpx solid tomato;
}

.name-time {
  margin-left: 20rpx;
}

.nick-name {
  font-size: 28rpx;
  color: #007aff;
}

.time {
  color: #808080;
  font-size: 24rpx;
}

.xinxi {
  flex: 1;
  position: relative;
}

.img-view {
  width: 100%;
  margin-top: 60rpx;
  overflow: hidden;
}

.img {
  width: 160rpx;
  height: 160rpx;
  margin-left: 20rpx;
  border-radius: 4rpx;
}

.info {
  color: #007aff;
  padding: 20rpx 0 20rpx 0;
  margin: 0 20rpx 0 20rpx;
  border-top: 1rpx dashed #e5e5e5;
  font-size: 28rpx;
  display: flex;
  justify-content: space-around;
}

.noxinxi {
  text-align: center;
  padding-top: 400rpx;
  color: #007aff;
}

/* 留言 */

.liuyan-base {
  margin: 0 20rpx 20rpx 20rpx;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.liuyan {
  background-color: #e5e5e5;
  padding: 10rpx;
}

.liuyan-huifu {
  margin-left: 40rpx;
}


/* 留言，回复弹窗 */

.liuyan-huifu-tanchuang {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  background-color: rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: center;
  /* align-items: flex-start;  */
}

.tanchuang-input {
  width: 700rpx;
  height: 300rpx;
  background-color: #fff;
  border-radius: 4rpx;
  margin-top: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.tanchuang-input-title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 700;
}

.tanchuang-input-fool {
  display: flex;
  justify-content: space-around;
  font-size: 36rpx;
  color: #007aff;
}