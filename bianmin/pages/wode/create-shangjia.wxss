.title {
  padding: 60rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

/* 商家名称 */

.name {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

/* 头图 */

.toutu {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.toutu-1{
  display: flex;
}

.toutu-title {
  margin-bottom: 20rpx;
}

.toutu-img-item {
  height: 130rpx;
  width: 130rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.tianjia-toutu {
  height: 130rpx;
  width: 130rpx;
  background-color: aliceblue;
  border: 1rpx dashed #808080;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 100rpx;
  color: #808080;
}

/* 地址 */

.dizhi {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

/* 描述 */

.miaoshu {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.miaoshu-title {
  margin-bottom: 20rpx;
}

.miaoshu-text {
  background-color: aliceblue;
  position: relative;
  width: 100%;
  height: 400rpx;
}

.miaoshu-cursor {
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 28rpx;
  color: #808080;
}

/* 详情图 */

.xiangqingtu {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.xiangqingtu-title {
  margin-bottom: 20rpx;
}

.xiangqingtu-1 {
  display: flex;
  flex-wrap: wrap;
}

.tianjia-xiangqingtu {
  height: 130rpx;
  width: 130rpx;
  background-color: aliceblue;
  border: 1rpx dashed #808080;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 100rpx;
  color: #808080;
}

.xiangqingtu-img-item {
  height: 130rpx;
  width: 130rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

/* 提交 */

.tijiao {
  background-color: tomato;
  padding: 30rpx;
  text-align: center;
}
