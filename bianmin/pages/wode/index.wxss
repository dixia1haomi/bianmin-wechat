.page {
  display: flex;
  flex-flow: column;
  height: 100%;
}

.base1 {
  position: relative;
  background-color: #fff;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.avatarImg {
  height: 160rpx;
  width: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.base2 {
  margin-top: 20rpx;
}

.base3 {
}

.base3-1 {
  color: #8a8a8a;
  font-size: 28rpx;
  text-align: center;
  position: absolute;
  bottom: 60rpx;
  width: 100%;
}

.contact {
  background-color: #2c2c2c;
  color: white;
  position: fixed;
  bottom: 20px;
  right: 0;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  font-size: 28rpx;
  padding: 10rpx;
}

.contact-item {
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
}


.view__hover {
  background-color: #f8f8f8;
}