.title {
  text-align: center;
  padding: 100rpx 0 60rpx 0;
  font-size: 36rpx;
  font-weight: 700;
  background-color: #fff;
}

.page {
  background-color: #fff;
}

/* 输入框 */

.textarea-view {
  position: relative;
  padding: 20rpx;
  background-color: #fff;
  text-align: center;
}

.textarea-view .textarea {
  width: 100%;
  height: 150rpx;
  background-color: aliceblue;
}

.cursor {
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 26rpx;
  color: #808080;
}

/* 图片 */

.img {
  width: 100%;
}

/* 添加图文按钮 */

.button {
  padding: 30rpx 0;
}

.button button {
  margin-bottom: 20rpx;
  width: 80%;
  border-radius: 50rpx;
  background-color: tomato;
  color: #fff;
}

.button button::after {
  border: none;
}

/* 使用帮助 */

.bangzhu {
  margin-top: 80rpx;
  padding: 0 40rpx;
}

.bangzhu-title {
  text-align: center;
  font-weight: 700;
}

