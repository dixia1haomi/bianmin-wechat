.page {
  padding-bottom: 200rpx;
}

.title {
  text-align: center;
  padding: 100rpx 0 60rpx 0;
  font-size: 36rpx;
  font-weight: 700;
  background-color: #fff;
}

/* 头图 */

.toutu {
  width: 100%;
  height: 562.5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
  background-color: #fff;
}

.toutu-tips {
  font-size: 26rpx;
  color: #808080;
  margin: 10rpx 20rpx 10rpx 20rpx;
}

.toutu-img {
  /* 4:3 */
  width: 100%;
  height: 562.5rpx;
}

.tianjia-toutu {
  color: #007aff;
}

.xiangqingtu {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.xiangqingtu-title {
  margin-bottom: 20rpx;
}

.xiangqingtu-1 {
  display: flex;
  flex-wrap: wrap;
}

.tianjia-xiangqingtu {
  height: 126rpx;
  width: 126rpx;
  background-color: aliceblue;
  border: 1rpx dashed #808080;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 100rpx;
  color: #808080;
}

.xiangqingtu-img-item {
  height: 130rpx;
  width: 130rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

/* 提交 */

.tijiao {
  position: fixed;
  bottom: 0;
  width: 100%;
  border-radius: 0;
  background-color: tomato;
  color: #fff;
}

.tijiao::after {
  border: none;
}
